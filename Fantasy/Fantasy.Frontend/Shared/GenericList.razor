@typeparam Titem

@if (Items is null)
{
    @if (Loading is null)
    {
      <Loading />
    }
    else
    {
        @Loading
    }

}
else if (Items.Count == 0)
{
    @if (NoRecords is null)
    {
        <p>@Localizer["NoRecords"]</p>
    }
    else
    {
        @NoRecords
    }
}
else
{
    @Body
}
